<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack1"
    tools:context=".ExibirEventoActivity">


<!--    var nome : String,-->
<!--    var local : String,-->
<!--    var time_A : MutableList<Usuario>,-->
<!--    var time_B : MutableList<Usuario>,-->
<!--    var descricao : String,-->
<!--    var host : Usuario,-->
<!--    var data : String,-->
<!--    var horario_inicio : String-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_nome_evento_exibir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome evento"
                android:textSize="35sp"
                android:fontFamily="sans-serif-light"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/txt_descricao_evento_exibir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_nome_evento_exibir"
                android:text="Evento organizado por julio, melhor de tres"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="sans-serif-light"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                />

            <RelativeLayout
                android:id="@+id/rlt_dados_evento_exibir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_descricao_evento_exibir"
                android:gravity="center"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:id="@+id/rlt_lyo_local_evento_exibir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    >

                    <TextView
                        android:id="@+id/txt_localTxt_evento_exibir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Local : "
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-light"
                        />

                    <TextView
                        android:id="@+id/txt_local_evento_exibir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Usina"
                        android:textSize="20sp"
                        android:layout_toEndOf="@id/txt_localTxt_evento_exibir"
                        android:fontFamily="sans-serif-light"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_host_evento_exibir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    >

                    <TextView
                        android:id="@+id/txt_hostTxt_evento_exibir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Host : "
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-light"
                        />

                    <TextView
                        android:id="@+id/txt_host_evento_exibir"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Julio93"
                        android:textSize="20sp"
                        android:layout_toEndOf="@id/txt_hostTxt_evento_exibir"
                        android:fontFamily="sans-serif-light"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_lyo_data_evento_exibir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlt_lyo_local_evento_exibir"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:id="@+id/txt_dataTxt_evento_exibir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data : "
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-light"
                        />

                    <TextView
                        android:id="@+id/txt_data_evento_exibir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="27/09"
                        android:textSize="20sp"
                        android:layout_toEndOf="@id/txt_dataTxt_evento_exibir"
                        android:fontFamily="sans-serif-light"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_lyo_horario_evento_exibir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlt_lyo_local_evento_exibir"
                    android:layout_alignStart="@+id/rlt_host_evento_exibir"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:id="@+id/txt_horarioTxt_evento_exibir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inicio : "
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-light"
                        />

                    <TextView
                        android:id="@+id/txt_horario_evento_exibir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="14:00"
                        android:textSize="20sp"
                        android:layout_toEndOf="@id/txt_horarioTxt_evento_exibir"
                        android:fontFamily="sans-serif-light"/>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlt_dados_evento_exibir"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id="@+id/timeA_txt_evento_exibir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="TimeA"
                    android:textSize="30dp"
                    android:layout_marginStart="45dp"/>

                <TextView
                    android:id="@+id/timeB_txt_evento_exibir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="70dp"
                    android:text="TimeB"
                    android:textSize="30sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcy_timeA_evento_exibir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/timeA_txt_evento_exibir"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcy_timeB_evento_exibir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="false"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/timeB_txt_evento_exibir"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>




</RelativeLayout>