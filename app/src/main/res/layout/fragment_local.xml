<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"
    tools:context=".FragmentsApp.LocalFragment">


    <RelativeLayout
        android:id="@+id/local_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBack1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:fontFamily="sans-serif-light"
            android:text="Locais"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:textStyle="bold" />




<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="2dp"-->
<!--            android:src="@drawable/p_saldo_shape_perfil"-->
<!--            android:layout_alignParentBottom="true"/>-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_registrar_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            app:fabCustomSize="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/ic_add_black_24dp" />

    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_locais"
        android:layout_below="@id/local_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>