<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsApp.Perfil.Perfil_EditFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_perfil"
                android:layout_width="300dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:background="@drawable/edt_txt_format1"
                android:ems="10"
                android:gravity="start|center"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:paddingLeft="50dp"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edt_perfil2"
                android:layout_width="300dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/edt_txt_format1"
                android:ems="10"
                android:gravity="start|center"
                android:hint="Senha"
                android:inputType="textPersonName"
                android:paddingLeft="50dp"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edt_perfil3"
                android:layout_width="300dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/edt_txt_format1"
                android:ems="10"
                android:gravity="start|center"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingLeft="50dp"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edt_perfil4"
                android:layout_width="300dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/edt_txt_format1"
                android:ems="10"
                android:gravity="start|center"
                android:hint="Telefone"
                android:inputType="textPersonName"
                android:paddingLeft="50dp"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edt_perfil5"
                android:layout_width="300dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/edt_txt_format1"
                android:ems="10"
                android:gravity="start|center"
                android:hint="Localidade"
                android:inputType="textPersonName"
                android:paddingLeft="50dp"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edt_perfil6"
                android:lineSpacingExtra="4dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/edt_txt_format1"
                android:ems="10"
                android:paddingVertical="30dp"
                android:gravity="start|center_horizontal"
                android:hint="Sobre"
                android:inputType="textMultiLine"
                android:paddingHorizontal="50dp"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_confirmar_editar_perfil"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="110dp"
                android:layout_marginVertical="45dp"
                android:text="Confirmar"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@drawable/btn_shape1"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>