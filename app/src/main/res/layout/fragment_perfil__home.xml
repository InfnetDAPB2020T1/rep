<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack1"
    tools:context=".FragmentsApp.Perfil.Perfil_HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/mickey" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:gravity="center"
                android:text="qwert123" />

            <TextView
                android:id="@+id/edt_descricao_perfil"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:text="Ola, meu nome Ã© qwert e adoro jogar paintball."
                android:textAlignment="center"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icone_email_perfil"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_email_black_24dp"
                    />

                <TextView
                    android:id="@+id/email_txt"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="qwert@gmail.com"
                    android:gravity="center"
                    android:textSize="22dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icone_telefone_perfil"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    />

                <TextView
                    android:id="@+id/telefone_txt"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="(21)985244252"
                    android:textSize="22dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/linear7"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/p_ganhas_txt"
                        android:layout_marginTop="40dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="p.ganhas"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/saldo_pontuacao_txt"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:background="@drawable/p_ganhas_shape_perfil"
                        android:text="6"
                        android:textColor="@color/colorAccent2"
                        android:textSize="35dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_gravity="center|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/saldo2_txt"
                        android:layout_marginTop="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Saldo"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/saldo2_pontuacao_txt"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/p_saldo_shape_perfil"
                        android:gravity="center"
                        android:text="+4"
                        android:textColor="@color/colorAccent3"
                        android:textSize="48dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear6"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/saldo3_txt"
                        android:layout_marginTop="40dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="p.perdidas"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/saldo3_pontuacao_txt"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:background="@drawable/edt_txt_format1"
                        android:text="2"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="40dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_meus_eventos"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Meus eventos"
                android:textSize="27dp"
                android:gravity="center"
                />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>