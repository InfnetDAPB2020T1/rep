<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack1"
    tools:context=".FragmentsApp.Perfil.Perfil_HomeFragment">

    <TextView
        android:id="@+id/perfil_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBack2"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Meu perfil"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        android:textStyle="bold" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_below="@id/perfil_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/perfil_home_toolbar"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/fundo_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rlt_lyo_ft_perfil_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp">

                    <ImageView
                        android:id="@+id/ft_perfil"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/shrek1" />

                    <ImageView
                        android:id="@+id/contorno_ft_perfil"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/perfil_contorno_ft" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/nome_txt_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlt_lyo_ft_perfil_home"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Eliasndc"
                    android:textSize="22dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_localidade_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nome_txt_perfil"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:paddingHorizontal="50dp"
                    android:text="RJ, Botafogo"
                    android:textColor="@color/colorLight"
                    android:textAlignment="center"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_sobre_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_localidade_perfil"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="18dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="50dp"
                    android:text="À procura de amadores como eu"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/rlt_lyo_saldo_perfil_home"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/txt_sobre_perfil"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/p_saldo_shape_perfil"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rlt_lyo_partidas_totais"
                        android:layout_width="91dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp">

                        <TextView
                            android:id="@+id/partidas_totais_txt_perfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="23"
                            android:textColor="@android:color/white"
                            android:textSize="27dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/partidas_totais_int_perfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/partidas_totais_txt_perfil"
                            android:gravity="center"
                            android:text="partidas"
                            android:textSize="13dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlt_lyo_partidas_ganhas"
                        android:layout_width="91dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/partidas_totais_txt_perfil2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="14"
                            android:textColor="@android:color/white"
                            android:textSize="27dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/partidas_totais_int_perfil2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/partidas_totais_txt_perfil2"
                            android:gravity="center"
                            android:text="vitórias"
                            android:textSize="13dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlt_lyo_desempenho"
                        android:layout_width="91dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="18dp">

                        <TextView
                            android:id="@+id/desempenho_txt_perfil2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="61%"
                            android:textColor="@android:color/white"
                            android:textSize="27dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/desempenho_int_perfil2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desempenho_txt_perfil2"
                            android:gravity="center"
                            android:text="desempenho"
                            android:textSize="13dp" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icone_email_perfil"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_email_black_24dp" />

                <TextView
                    android:id="@+id/email_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:text="elias.nunes2345@gmail.com"
                    android:textIsSelectable="true"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icone_telefone_perfil"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:id="@+id/telefone_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="(21)989238494"
                    android:textIsSelectable="true"
                    android:textSize="16dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_editar_perfil"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_shape1"
                android:text="Editar perfil"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/txt_meu_evento"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="110dp"
                android:gravity="center"
                android:text="Meu evento"
                android:textSize="27dp" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>